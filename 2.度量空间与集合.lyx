\begin_layout Section*
度量空间与集合(作业: 20230220)
\end_layout

\begin_layout Enumerate
度量空间: 设
\begin_inset Formula $X$
\end_inset

是集合, 有映射
\begin_inset Formula $d:(x,y)\to d(x,y)$
\end_inset

.
\begin_inset Formula $d$
\end_inset

满足:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $\forall x,y\in X,d(x,y)\ge0$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\forall x,y\in X$
\end_inset

,
\begin_inset Formula $d(x,y)=d(y,x)$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\forall x,y,z\in X,d(x,z)\le d(x,y)+d(y,z)$
\end_inset

;
\end_layout

\begin_layout Standard
则称
\begin_inset Formula $d$
\end_inset

为一个度量(距离), 
\begin_inset Formula $(X,d)$
\end_inset

为度量空间;
\end_layout

\end_deeper
\begin_layout Enumerate
常见度量:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $p-$
\end_inset

度量: 
\begin_inset Formula $d_{p}(x,y)=\left(\sum\limits _{x=1}^{n}|x_{i}-y_{i}|^{p}\right)^{\frac{1}{p}}$
\end_inset

;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\infty-$
\end_inset

度量: 
\begin_inset Formula $d_{\infty}(x,y)=\max|x_{i}-y_{i}|$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
球: 在度量空间
\begin_inset Formula $(X,d)$
\end_inset

中, 称
\end_layout

\begin_deeper
\begin_layout Enumerate
开球: 
\begin_inset Formula $B(x_{0},r)=\{x\in X|d(x,x_{0})<r\}$
\end_inset

;
\end_layout

\begin_layout Enumerate
闭球: 
\begin_inset Formula $\overline{B(x_{0},r)}=\{x\in X|d(x,x_{0})\le r\}$
\end_inset

;
\end_layout

\begin_layout Enumerate
球面: 
\begin_inset Formula $S(x_{0},r)=\{x\in X|d(x,x_{0})=r\}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $\varepsilon-$
\end_inset

邻域: 开球
\begin_inset Formula $B(x_{0},\varepsilon)$
\end_inset

称为
\begin_inset Formula $x_{0}$
\end_inset

的一个
\begin_inset Formula $\varepsilon-$
\end_inset

邻域;
\end_layout

\begin_deeper
\begin_layout Enumerate
开集: 度量空间
\begin_inset Formula $(X,d)$
\end_inset

, 
\begin_inset Formula $M\subset X$
\end_inset

, 若对任意元素
\begin_inset Formula $x_{0}\in M$
\end_inset

, 存在
\begin_inset Formula $\varepsilon>0$
\end_inset

, 使得
\begin_inset Formula $B(x_{0},\varepsilon)\subset M$
\end_inset

, 则称
\begin_inset Formula $M$
\end_inset

是
\begin_inset Formula $X$
\end_inset

中的开集;
\end_layout

\begin_layout Enumerate
闭集: 度量空间
\begin_inset Formula $(X,d)$
\end_inset

, 
\begin_inset Formula $K\subset X$
\end_inset

, 若
\begin_inset Formula $K^{c}=X|K$
\end_inset

是开集, 则称
\begin_inset Formula $K$
\end_inset

是
\begin_inset Formula $X$
\end_inset

中的闭集;
\end_layout

\begin_layout Enumerate
内点: 度量空间
\begin_inset Formula $(X,d)$
\end_inset

, 
\begin_inset Formula $M\subset X,x_{0}\in M$
\end_inset

, 若存在
\begin_inset Formula $\varepsilon>0$
\end_inset

, 使得
\begin_inset Formula $B(x_{0},\varepsilon)\subset M$
\end_inset

, 则称
\begin_inset Formula $x_{o}$
\end_inset

是
\begin_inset Formula $M$
\end_inset

的一个内点;
\end_layout

\begin_layout Enumerate
内部: 
\begin_inset Formula $M$
\end_inset

中全体内点构成的集合称为
\begin_inset Formula $M$
\end_inset

的内部, 记为: 
\begin_inset Formula $M^{o}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
集类: 
\begin_inset Formula $\Xi$
\end_inset

是
\begin_inset Formula $X$
\end_inset

中某些子集构成的集合, 称
\begin_inset Formula $\Xi$
\end_inset

为集类;
\end_layout

\begin_layout Enumerate
拓扑空间: 满足开集条件的集类组成的空间
\begin_inset Formula $(X,\Xi)$
\end_inset

, 定义见另一笔记文件;
\end_layout

\begin_layout Enumerate
聚点(极限点): 度量空间
\begin_inset Formula $(X,d),M\subset X,x_{0}\in X$
\end_inset

, 若, 
\begin_inset Formula $x_{0}$
\end_inset

的任一
\begin_inset Formula $\varepsilon-$
\end_inset

邻域都至少函有一个不同于
\begin_inset Formula $x_{0}$
\end_inset

的点
\begin_inset Formula $y_{o}\in M$
\end_inset

, 则称
\begin_inset Formula $x_{0}$
\end_inset

是
\begin_inset Formula $M$
\end_inset

的聚点;
\end_layout

\begin_deeper
\begin_layout Enumerate
导集: 
\begin_inset Formula $M$
\end_inset

的聚点全体构成的集合称为
\begin_inset Formula $M$
\end_inset

的导集, 记为
\begin_inset Formula $M'$
\end_inset

;
\end_layout

\begin_layout Enumerate
闭包: 
\begin_inset Formula $\bar{M}:=M\cup M'$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Enumerate
度量空间
\begin_inset Formula $(X,d)$
\end_inset

, 
\begin_inset Formula $M\subset X$
\end_inset

, 则
\begin_inset Formula $\overline{M}$
\end_inset

是闭集;
\end_layout

\begin_layout Enumerate
度量空间
\begin_inset Formula $(X,d)$
\end_inset

, 
\begin_inset Formula $M\subset X:M$
\end_inset

是闭集
\begin_inset Formula $\Leftrightarrow M=\bar{M}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
边缘: 
\begin_inset Formula $\partial M=\bar{M}-M^{o}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
有限集: 如果集合中元素个数有限, 则称其为有限集;
\end_layout

\begin_deeper
\begin_layout Enumerate
可列集: 若集合中元素的个数无限多, 但可与自然数集
\begin_inset Formula $\mathbb{N}$
\end_inset

中的元素一一对应, 则集合为可列集;
\end_layout

\begin_layout Enumerate
可数集: 有限集和可列集统称为可数集;
\end_layout

\begin_layout Enumerate
\begin_inset Formula $A_{n}(n\in\mathbb{N})$
\end_inset

为可列集, 则
\begin_inset Formula $A=\cup_{n=1}^{\infty}A_{n}$
\end_inset

为可列集;
\end_layout

\begin_deeper
\begin_layout Enumerate
推论: 可列个可列集的并集为可列集.
 如: 有理数集
\begin_inset Formula $\mathbb{Q}$
\end_inset

是可列集;
\end_layout

\end_deeper
\begin_layout Enumerate
常见的不可列集: 无理数集, 实数集
\begin_inset Formula $\mathbb{R}$
\end_inset

;
\end_layout

\end_deeper
\begin_layout Enumerate
稠密子集: 度量空间
\begin_inset Formula $(X,d)$
\end_inset

, 
\begin_inset Formula $M\subset X$
\end_inset

, 若
\begin_inset Formula $\overline{M}=X$
\end_inset

, 则称
\begin_inset Formula $M$
\end_inset

在
\begin_inset Formula $X$
\end_inset

中稠密, 
\begin_inset Formula $M$
\end_inset

是
\begin_inset Formula $X$
\end_inset

中的稠密子集;
\end_layout

\begin_layout Enumerate
可分性: 若
\begin_inset Formula $X$
\end_inset

有一个可数的稠密子集
\begin_inset Formula $M$
\end_inset

, 则称
\begin_inset Formula $X$
\end_inset

是可分的, 
\begin_inset Formula $(X,d)$
\end_inset

是一个可分空间;
\end_layout

\begin_deeper
\begin_layout Enumerate
常见可分空间: 
\begin_inset Formula $(\mathbb{R}^{n},d_{p})(1\le p\le\infty)$
\end_inset

, 
\begin_inset Formula $(l^{p},d_{p})(1\le p\le\infty)$
\end_inset

, 其中
\begin_inset Formula $l^{p}=\{\{x_{i}\},i\in\mathbb{N},\sum\limits _{i=1}^{\infty}|x_{i}|^{p}<\infty\}$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Enumerate
函数空间可分: 
\begin_inset Formula $(\mathbb{C}[a,b],d_{max})$
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $d_{max}(f,g)=\max_{a\le t\le b}|f(t)-g(t)|$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $C[a,b]=\{f:[a,b]\to R|\exists f'(t)\}$
\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Enumerate
常见不可分空间: 
\begin_inset Formula $(l^{\infty},d_{\text{\ensuremath{\infty}}})$
\end_inset

;
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $l^{\infty}=\{(x_{i})|i\in\mathbb{N},\sup_{i\in\mathbb{N}}|x_{i}|<\infty\}$
\end_inset


\end_layout

\end_deeper
\end_deeper
